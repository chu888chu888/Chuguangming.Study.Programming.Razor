@{  
    var db = Database.Open("Blog");
    var posts = db.Query("SELECT ID,Title,Body FROM Posts");
}

<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>My Blog</title>
    </head>
    <body>
    
    <h1>My Blog</h1>
        
    @foreach(var post in posts) {
        <div>
            <h3>@post.Title</h3>
            <div>@post.Body</div>
        </div>
    }

</body>
</html>